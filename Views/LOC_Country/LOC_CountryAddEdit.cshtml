@model LOC_CountryModel

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="LOC_Country" asp-action="Save">
            @Html.HiddenFor(x=>x.CountryID)
            <h3>@TempData["CountryInsertMsg"]</h3>
            <div class="form-group">
                <label>Country Name</label>
                <input type="text" class="form-Control" placeholder="Enter Country Name" asp-for="CountryName" />
            </div>
            <div class="form-group">
                <label>Country Code</label>
                <input type="text" class="form-Control" placeholder="Enter Country Code" asp-for="CountryCode" />
            </div>
            <div class="form-group">
                <label>Creation Date</label>
                <input type="date" class="form-Control" placeholder="Enter Creation Date" asp-for="CreationDate" />
            </div>
            <div class="form-group">
                <label>Modification Date</label>
                <input type="date" class="form-Control" placeholder="Enter Modification Date" asp-for="Modification" />
            </div>
            </hr>
            <input type="submit" />
            <input type="submit" value="Clear" asp-action="Add"/>
            <input type="submit" value="Cancel" asp-action="Index" />
        </form>
    </div>

</div>